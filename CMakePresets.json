{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using Make generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-${presetName}"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "cross-compile",
      "configurePreset": "cross-compile"
    }
  ]
}